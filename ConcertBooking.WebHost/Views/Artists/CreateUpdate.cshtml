@model CreateArtistVM;
@{
    ViewData["Title"] = "CreateUpdate";
}

<br />
<h2 class="text-info">@((Model == null || Model.Id == 0) ? "Create" : "Update") artist</h2>
<div class="row">
    @if (Model.Id > 0)
    {
        <div class="col-4" >
            <img src="@Model.strImageUrl" class="rounded-circle" width="200" height="200" style="border:groove" />
        </div>
    }
   
    <div class="col-8">
        <form action="CreateUpdate" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input hidden asp-for="Id" />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Bio"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ImageUrl"></label>
                </div>
                <div class="col-4">
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="form-group">
                <partial name="_FormButtons" model="@Model.Id"></partia>
            </div>
        </form>
    </div>
</div>
