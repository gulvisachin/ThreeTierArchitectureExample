@model IEnumerable<Artist>
@{
    ViewData["Title"] = "Index";
}


<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div>
                <h3 class="card-title">Venues Details</h3>
            </div>
            <div>
                <a class="btn btn-primary" asp-area="" asp-controller="Artists" asp-action="CreateUpdate" asp-route-id="0"><i class="fa fa-plus" aria-hidden="true"> New Venue </i></a>
            </div>
        </div>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Bio</td>
                        <td> <img src="@item.ImageUrl" class="rounded-circle" width="50" height="50" style="border:groove" /></td>
                        <td>
                            <a href="/Artists/CreateUpdate?id=@item.Id" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"> Edit</i></a>
                            @*<a href="/Artists/Delete?id=@item.Id" onclick="return window.confirm('Are you sure to delete this record?')" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"> Delete</i></a>*@
                            <a onClick=Remove("/Artists/Delete/@item.Id") class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"> Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        function Remove(url) {
            DeleteRecord(url)
        }
    </script>
    @*<script src="~/js/Masters/Artist.js"></script>*@
    <script src="~/js/common/Common.js"></script>
}


