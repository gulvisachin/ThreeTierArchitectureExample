@model IEnumerable<DashboardVM>

@{
    ViewData["Title"] = "GetTickets";
}

<h1>Booking Details</h1>
<a class="btn btn-info" asp-controller="Concerts" asp-action="Index">Back to Concert</a>
@if (Model.Count() == 0)
{
    <div class="alert alert-warning mt-2">
      Booking not found for this concert
    </div>
}
else{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConcertName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatNumber)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcertName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNumber)
            </td>
          
        </tr>
}
    </tbody>
</table>
}