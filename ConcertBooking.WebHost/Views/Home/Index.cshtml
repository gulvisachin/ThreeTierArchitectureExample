@model IEnumerable<HomeViewModel>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row mt-2">
@foreach(var item in Model){
        <div class="col-4 mb-2">
            <div class="card" style="width: 18rem">
                <img src="@item.ConcertImage" class="card-img-top" alt="..." height="150" width="100">
                <div class="card-body">
                    <h5 class="card-title">Name  : @item.ConcertName</h5>
                    <h5 class="card-title">Actor : @item.ArtistName</h5>
                    <h5 class="card-title">Address : @item.ConcertAddress</h5>
                    <p class="card-text">@item.ConcertDescription</p>
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.ConcertId" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>
}
</div>
