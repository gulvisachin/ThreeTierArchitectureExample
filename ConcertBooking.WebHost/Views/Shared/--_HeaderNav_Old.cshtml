@using ConcertBooking.Infrastructure;
<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">
            <img src="https://seeklogo.com/images/C/concert-logo-F0A5795972-seeklogo.com.png" height="50"/>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                @if (User.IsInRole(GlobalConfiguration.Admin_Role))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Venues" asp-action="Index">Venue</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Concerts" asp-action="Index">Concert</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Artists" asp-action="Index">Artist</a>
                    </li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Ticket" asp-action="MyTickets">myTicket</a>
                    </li>
                    <li class="nav-item">
                        @await Component.InvokeAsync("CountBooking")
                    </li>
                }

            </ul>
            <partial name="_LoginPartial" />
        </div>
    </div>
