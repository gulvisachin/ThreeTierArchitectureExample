@model CountryVM;
@{
    ViewData["Title"] = "CreateUpdate";
}

<br />
<h2 class="text-info">@((Model == null || Model.country.Id == 0) ? "Create" : "Update") Country</h2>
<form action="CreateUpdate" method="post">
    @Html.AntiForgeryToken()
    <input hidden asp-for="country.Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="country.Name"></label>
        </div>
        <div class="col-4">
            <input asp-for="country.Name" class="form-control" />
            <span asp-validation-for="country.Name" class="text-danger"></span>
        </div>

    </div>
    <br />
    <div class="form-group">
        <partial name="_FormButtons" model="@Model.country.Id"></partia>
    </div>
</form>